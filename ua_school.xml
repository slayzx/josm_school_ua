    version="0.18_2021-04-27">
    <group name="UA:Education"
        uk.name="UA:Освіта"
        icon="https://upload.wikimedia.org/wikipedia/commons/e/e6/Nuvola_apps_edu_miscellaneous_Cyrilic.svg"
        icon_size="16">
        <group name="UA:Schools"
            uk.name="Школи"
            icon="https://raw.githubusercontent.com/slayzx/josm_school_ua/master/icons/school_icon.svg"
            icon_size="16">
            <item name="School territory"
                uk.name="Територія школи"
                type="closedway,multipolygon"
                icon="https://raw.githubusercontent.com/slayzx/josm_school_ua/master/icons/school_territory.svg"
                icon_size="16"
                preset_name_label="true">
                <link wiki="Uk:Tag:amenity=school" />
                <space />
                <key key="amenity"
                    value="school" />
                <text key="name"
                    text="Назва школи"
                    default="" />
                <text key="name:uk"
                    text="Назва школи українською"
                    default="" />
                <text key="official_name"
                    text="Офіційна назва"
                    default="" />
                <text key="short_name"
                    text="Коротка назва"
                    default="" />
                <text key="operator"
                    text="Керуюча установа"
                    default="" />
                <multiselect key="operator:type"
                    text="Тип установи"
                    values="public;private"
                    display_values="публічна (комунальна);приватна"
                    rows="2" />
                <check key="fee"
                    text="Плата за навчання"
                    default="off"
                    delete_if_empty="true" />
                <text key="capacity"
                    text="Макс. кількість учнів"
                    default="" />
                <item_separator />
                <label text="Для внесення телефонного номера використовуйте формат E.113, наприклад +380 44 113 4567" />
                <text key="contact:phone"
                    text="Телефон школи"
                    default="" />
                <text key="contact:email"
                    text="Електронна пошта школи"
                    default="" />
                <text key="contact:website"
                    text="Сайт школи"
                    default="" />
                <text key="ref"
                    text="Номер школи в системі ІСУО"
                    default="" />
                <item_separator />
                <multiselect key="isced:level"
                    text="Рівень освіти (ISCED)"
                    values="0;1;2;3"
                    rows="4" />
                <text key="min_age"
                    text="Мін. вік відвідування"
                    default="" />
                <text key="mах_age"
                    text="Макс. вік відвідування"
                    default="" />
            </item> <!-- School territory -->
            <item name="NVK (I-II) territory"
                uk.name="Територія НВК (I-II ступенів)"
                type="closedway,multipolygon"
                icon="https://raw.githubusercontent.com/slayzx/josm_school_ua/master/icons/nvk_1.svg"
                icon_size="16"
                preset_name_label="true">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="0;1;2" />
                <key key="min_age"
                    value="3" />
            </item> <!-- NVK_1 territory -->
            <item name="NVK (I-III) territory"
                uk.name="Територія НВК (I-III ступенів)"
                type="closedway,multipolygon"
                icon="https://raw.githubusercontent.com/slayzx/josm_school_ua/master/icons/nvk_2.svg"
                icon_size="16"
                preset_name_label="true">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="0;1;2;3" />
                <key key="min_age"
                    value="3" />
            </item> <!-- NVK_2 territory -->
            <item name="School (I-II) territory"
                uk.name="Територія школи (I-II ступенів)"
                type="closedway,multipolygon"
                icon="https://raw.githubusercontent.com/slayzx/josm_school_ua/master/icons/school_1.svg"
                icon_size="16"
                preset_name_label="true">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="1;2" />
            </item> <!-- School_1 territory -->
            <item name="School (I-III) territory"
                uk.name="Територія школи (I-III ступенів)"
                type="closedway,multipolygon"
                icon="https://raw.githubusercontent.com/slayzx/josm_school_ua/master/icons/school_2.svg"
                icon_size="16"
                preset_name_label="true">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="1;2;3" />
            </item> <!-- School_2 territory -->
